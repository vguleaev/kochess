{
  "name": "kochess",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "build:backend": "pnpm --filter backend build",
    "build:frontend": "pnpm --filter frontend build",
    "build:infra": "pnpm --filter infrastructure build",
    "deploy:infra": "pnpm --filter infrastructure cdk deploy",
    "deploy:frontend": "pnpm --filter frontend build && pnpm --filter infrastructure cdk:deploy-frontend",
    "dev:frontend": "pnpm --filter frontend dev"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "@types/node": "^20.10.0"
  }
}
